# ============================================
# IMSAM AI Interview Service - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your API keys

# ============================================
# Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# OpenAI API Key (LLM + STT + TTS)
# ============================================
# GPT-4o for LLM, Whisper for STT, TTS-1 for TTS
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# Optional: Microsoft Clarity Analytics
# ============================================
NEXT_PUBLIC_CLARITY_ID=xxxxxxxxxx

# ============================================
# Optional: Test Mode
# ============================================
# Set to 'true' to use mock responses (no API calls)
TEST_MODE=false
