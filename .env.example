# ============================================
# IMSAM AI Interview Service - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your API keys

# ============================================
# Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_PROJECT_REF=your-project-ref

# ============================================
# OpenAI API Key (LLM + STT + TTS)
# ============================================
# GPT-4o for LLM, Whisper for STT, TTS-1 for TTS
OPENAI_API_KEY=sk-your-openai-api-key

# ============================================
# Anthropic API Key (LLM Fallback)
# ============================================
# Claude 3.5 Sonnet as fallback for OpenAI
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ============================================
# Cohere API Key (RAG Reranking)
# ============================================
# Used for reranking search results in RAG pipeline
COHERE_API_KEY=your-cohere-api-key

# ============================================
# ElevenLabs API Key (Premium TTS - Optional)
# ============================================
# Alternative TTS provider with more natural voices
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# ============================================
# OAuth Providers
# ============================================
# Naver Login
NEXT_PUBLIC_NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# Google Login
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Kakao Login
NEXT_PUBLIC_KAKAO_CLIENT_ID=your-kakao-rest-api-key
KAKAO_CLIENT_SECRET=your-kakao-client-secret

# Site URL (for OAuth callbacks)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ============================================
# Security Configuration
# ============================================
# Master encryption key for sensitive data (32 bytes in hex = 64 characters)
# Generate with: openssl rand -hex 32
ENCRYPTION_MASTER_KEY=your-64-character-hex-encryption-key

# ============================================
# Rate Limiting Configuration
# ============================================
# Maximum API requests per minute per user
RATE_LIMIT_MAX_REQUESTS=20
# Time window in seconds
RATE_LIMIT_WINDOW_SECONDS=60

# Daily limits per user tier
# DAILY_LIMIT_INTERVIEWS_FREE=5
# DAILY_LIMIT_INTERVIEWS_PRO=50
# DAILY_LIMIT_UPLOADS_FREE=10
# DAILY_LIMIT_UPLOADS_PRO=100

# ============================================
# Cost Monitoring
# ============================================
# Daily budget limit in USD (alerts when exceeded)
OPENAI_DAILY_BUDGET_USD=50
# Alert webhook URL (Slack, Discord, etc.)
COST_ALERT_WEBHOOK_URL=

# ============================================
# Optional: Microsoft Clarity Analytics
# ============================================
NEXT_PUBLIC_CLARITY_ID=

# ============================================
# Optional: Test Mode
# ============================================
# Set to 'true' to use mock responses (no API calls)
TEST_MODE=false

# ============================================
# Sentry Error Tracking & Monitoring
# ============================================
# Get your DSN from https://sentry.io
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# Vercel Environment (Auto-set by Vercel)
# ============================================
# VERCEL_ENV=production|preview|development
# VERCEL_URL=your-deployment-url
