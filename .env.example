# ============================================
# IMSAM AI Interview Service - Environment Variables
# ============================================
# Copy this file to .env.local and fill in your API keys

# ============================================
# Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# LLM Providers (Multi-LLM Router)
# ============================================
# Primary: OpenAI GPT-4o
OPENAI_API_KEY=sk-your-openai-api-key

# Fallback: Anthropic Claude 3.5 Sonnet
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ============================================
# STT Providers (Speech-to-Text)
# ============================================
# Primary: Deepgram Nova-2
DEEPGRAM_API_KEY=your-deepgram-api-key

# Fallback: OpenAI Whisper (uses OPENAI_API_KEY above)

# ============================================
# TTS Providers (Text-to-Speech)
# ============================================
# Primary: OpenAI TTS (uses OPENAI_API_KEY above)

# Fallback: ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# ============================================
# RAG - Retrieval Augmented Generation
# ============================================
# Cohere Reranker for hybrid search
COHERE_API_KEY=your-cohere-api-key

# ============================================
# Optional: Microsoft Clarity Analytics
# ============================================
NEXT_PUBLIC_CLARITY_ID=xxxxxxxxxx

# ============================================
# Optional: Test Mode
# ============================================
# Set to 'true' to use mock responses (no API calls)
TEST_MODE=false

# ============================================
# Optional: LLM Configuration
# ============================================
# LLM_PRIMARY_PROVIDER=openai
# LLM_FALLBACK_PROVIDER=anthropic
# LLM_MAX_RETRIES=3
# LLM_TIMEOUT_MS=30000

# ============================================
# Optional: Audio Configuration
# ============================================
# STT_PRIMARY_PROVIDER=deepgram
# STT_FALLBACK_PROVIDER=whisper
# TTS_PRIMARY_PROVIDER=openai
# TTS_FALLBACK_PROVIDER=elevenlabs
